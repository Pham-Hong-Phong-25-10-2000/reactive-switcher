{
  "name": "reactive-switcher",
  "version": "1.0.2",
  "description": "Type-safe, modular, and instant theme switching for React & Tailwind CSS v4",
  "author": "Poyraz Avsever",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/poyrazavsever/reactive-switcher"
  },
  "homepage": "https://reactive-switcher.vercel.app",
  "bugs": {
    "url": "https://github.com/poyrazavsever/reactive-switcher/issues"
  },
  "keywords": [
    "react",
    "theme",
    "theme-switcher",
    "dark-mode",
    "light-mode",
    "tailwindcss",
    "css-variables",
    "typescript",
    "next.js"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "pnpm build",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
